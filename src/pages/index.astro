---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Kognomi — Your 24x7 friend in need.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Join the Waitlist',
        href: 'https://forms.gle/hixvsJqvM3dtroHa9',
        target: '_blank',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Kognomi Hero Image' }}
  >
    <Fragment slot="title"> Kognomi is your 24x7 friend in need </Fragment>

    <Fragment slot="subtitle">
      In a world where mental health challenges are common, Everyone deserves someone to talk to. Let Kognomi be your
      understanding companion for those times when you need a listening ear.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with Kognomi"
    subtitle="An empathetic AI friend available 24/7 to provide a supportive, non-judgmental space for you to share your thoughts and feelings."
    items={[
      {
        title: '24/7 Availability',
        description:
          'Kognomi is always there for you, ready to lend an ear at any time of day or night, ensuring you never feel alone.',
        icon: 'tabler:message-chatbot',
      },
      {
        title: 'Empathetic Listening',
        description:
          'Our AI is designed to be an understanding and empathetic friend, providing support without judgment or advice, just like a real friend would.',
        icon: 'tabler:heart',
      },
      {
        title: 'Safe and Secure',
        description:
          'Your privacy is our priority. All conversations are confidential and secured with advanced encryption to protect your data.',
        icon: 'tabler:apps',
      },
      {
        title: 'Personalized Conversations',
        description:
          'Kognomi adapts to your unique needs and preferences, making each interaction feel personal and tailored to your situation.',
        icon: 'tabler:bell-ringing',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Do you have questions about Kognomi? These might answer some of them."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What is Kognomi?',
        description:
          'Kognomi is an empathetic AI friend available 24/7 to provide a supportive, non-judgmental space for you to share your thoughts and feelings.',
      },
      {
        title: 'Is Kognomi a replacement for therapy?',
        description:
          'No, Kognomi is not a replacement for professional therapy. It serves as a supportive friend until you can access professional help.',
      },
      {
        title: 'How does Kognomi support mental health?',
        description:
          'Kognomi listens like a friend, offering empathetic support, personalized chat styles, and resources to help guide you towards professional therapy.',
      },
      {
        title: 'How can I join the Kognomi community?',
        description:
          'Join our waitlist to receive updates, exclusive access to beta testing, and early insights into our journey. Visit our website and sign up today!',
      },
      {
        title: 'Is my data safe with Kognomi?',
        description:
          'We take your privacy seriously. All conversations with Kognomi are confidential, and we use advanced security measures to protect your data.',
      },
      {
        title: 'When will Kognomi be available?',
        description:
          'We’re working hard to bring Kognomi to you soon. Join our waitlist to stay updated on our progress and be the first to know when we launch.',
      },
    ]}
  />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`The blog is used to display AstroWind documentation.
                        Each new article will be an important step that you will need to know to be an expert in creating a website using Astro + Tailwind CSS.
                        Astro is a very interesting technology. Thanks.
                `}
  />
  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join the Waitlist',
        href: 'https://forms.gle/hixvsJqvM3dtroHa9',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title"> Join the Kognomi waitlist. </Fragment>

    <Fragment slot="subtitle">
      To know more about Kognomi, get timely updates on when it is being released, and our blog posts on mental health,
      click on the button below to join our waitlist.
    </Fragment>
  </CallToAction>
</Layout>
